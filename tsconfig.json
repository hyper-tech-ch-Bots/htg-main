{
	"compilerOptions": {
		"target": "ES2021",
		"module": "CommonJS",
		"outDir": "./dist",
		"rootDir": "./src",
		"baseUrl": "./src",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"typeRoots": [
			"./src/types/*/**",
			"./node_modules/@types"
		],
		"paths": {
			"*": [
				"*"
			]
		}
	}
}